{{#each this}}
<div class="photo-card">
    <img src="{{webformatURL}}" alt="{{tags}}" loading="lazy" width="340px" height="220px" />

    <div class="info">
        <p class="info-item">
            <b>Likes </b> <span class="" >{{likes}}</span> 
        </p>
        <p class="info-item">
            <b>Views </b>{{views}}
        </p>
        <p class="info-item"><b>Comments </b>{{comments}}</p>
        <p class="info-item">
            <b>Downloads </b>{{downloads}}
        </p>
    </div>
</div>
{{/each}}